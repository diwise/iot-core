    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/iot-core/main.go",
            "env": {
                "DEV_MGMT_URL": "http://localhost:8081",
                "OAUTH2_TOKEN_URL": "http://localhost:8082/realms/diwise-local/protocol/openid-connect/token",
                "OAUTH2_CLIENT_ID": "diwise-devmgmt-api",
                "OAUTH2_CLIENT_SECRET": "",
                "RABBITMQ_DISABLED": "true",
                "POSTGRES_USER": "diwise",
                "POSTGRES_PASSWORD": "diwise",
                "POSTGRES_HOST": "localhost",
                "POSTGRES_PORT": "5432",
                "POSTGRES_DBNAME": "diwise",
                "POSTGRES_SSLMODE": "disable",
            },
            "args": [
                "-functions=${workspaceFolder}/deployments/configs/diwise/functions.csv"
            ]
        }
    ]
}